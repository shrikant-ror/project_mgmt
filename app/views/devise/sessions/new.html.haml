%body.text-center
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f|
    %img.mb-4{:alt => "", :height => "72", :src => "https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg", :width => "72"}/
    %h1.h3.mb-3.font-weight-normal Please sign in
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address"
    = f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"
    .checkbox.mb-3
      %label
        %input{:type => "checkbox", :value => "remember-me"}/
        Remember me
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in
  = render "devise/shared/links"
