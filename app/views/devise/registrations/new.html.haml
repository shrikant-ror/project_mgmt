%body.text-center
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f|
    = render "devise/shared/error_messages", resource: resource
    %img.mb-4{:alt => "", :height => "72", :src => "https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg", :width => "72"}/
    %h1.h3.mb-3.font-weight-normal Sign Up
    = f.text_field :first_name, class: "form-control", placeholder: "First Name"
    = f.text_field :last_name, class: "form-control", placeholder: "Last Name"
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address"
    = f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password"
    = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password"
    %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign Up
    = render "devise/shared/links"
